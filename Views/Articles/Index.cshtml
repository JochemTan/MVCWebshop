@model IEnumerable<MVCWebshop.Models.Article>


<p>All products</p>
<div class="filter">
    <h4>Filter options</h4>
    @using (Html.BeginForm())
    {
        <div class="form-inline">
            <div class="form-group">
                <label>Category</label>
                <select class="form-control">
                    <option>select a category...</option>
                    <option>Phones</option>
                    <option>Beers</option>
                    <option>3</option>
                </select>
            </div>
            <div class="form-group">
                <label>Sorteer op:</label>
                <select class="form-control">
                    <option>sort option...</option>
                    <option>Prijs Laag - Hoog</option>
                    <option>Prijs Hoog - Laag</option>
                    <option>Artikelnaam A - Z</option>
                    <option>Artikelnaam Z - A</option>

                </select>
            </div>
            <div class="form-group"><button class="btn btn-primary">Search</button></div>
        </div>
    }
</div>

<hr>
<div class="row">
@foreach (var article in Model)
{
    <div class="col-md-3">
        <img src="~/Content/Images/@article.Image" alt="placeholder image" class="img-responsive " style="margin: 0px auto">
        <p class="price">&euro; @article.Price</p>
        <div class="productDescription">

            <h4>@article.Name</h4>
            <p class="description">@article.Description</p>
            <!-- <div class="addToCartButton">
                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
            </div> -->

        </div>
    </div>
}
</div>


<br>
<a href="#">see all products >></a>

