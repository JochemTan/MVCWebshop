        <div class="row">

            <div class="col-md-4">

                <img src="~/Content/Images/@Html.DisplayFor(model => model.Image)" alt="placeholder image" class="img-responsive " style="margin: 0px auto">
            </div>
            <div class="col-md-6">
                <h3>@Html.DisplayFor(model => model.Name)</h3>
                @if (@Model.Instock > 0)
                {
                    <span class="label label-success">Op voorraad</span>
                }
                else
                {
                    <span class="label label-danger">Niet op voorraad</span>
                }

                <hr>
                <p class="priceLabel">Price: &euro; <span>@Html.DisplayFor(model => model.Price )</span></p>
                <p class="Description">@Html.DisplayFor(model => model.Description)</p>
            </div>
            <div class="col-md-2">
                <div class="panel panel-default">

                    <div class="panel-body">
                        @using (Html.BeginForm("addToCart", "Articles", FormMethod.Post))
                        {
                            <label> Aantal:</label>
                            @Html.Hidden("ArticleID", @Model.ID)
                            <select name="quantity" class="form-control">
                                @for (int i = 1; i <= @Model.Instock; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                            
                            if (@Model.Instock > 0)
                            {
                                <button class="customAddButton" type="submit">Add to cart</button>
                            }
                            else
                            {
                                <button class="customAddButton" type="submit" disabled>Add to cart</button>
                            }

                        }
                    </div>
                </div>
            </div>
        </div>